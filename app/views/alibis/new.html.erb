<h1 class="title">New Alibi</h1>

<div id="form">
<%= form_with model: @alibi do |form| %>
    <div>
        <%= form.label :title%><br>
        <%= form.text_field :title%>
        <div class="errors">
            <% @alibi.errors.full_messages_for(:title).each do |message| %>
                <span style="color: red"><%= message %></span>
            <% end %>
        </div>
    </div>
    <br>
    <div>
        <%= form.label :body%><br>
        <%= form.text_area :body%>
        <div class="errors">
            <% @alibi.errors.full_messages_for(:body).each do |message| %>
                <span style="color: red"><%= message %></span>
            <% end %>
        </div>
    </div>
    <br>
    <div>
        <%= form.submit %>
    </div>
<% end %>
</div>